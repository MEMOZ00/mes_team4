    </insert>
    
    <select id="orderinfo" resultType="com.itwillbs.domain.OrderDTO">
        select *
        from order
        where instruction_cd = #{instruction_cd}
    </select>
    
    <delete id="orderdelete">
  		delete from order
  		where instruction_cd = #{instruction_cd}
    </delete>
    

 
 

    
