	 <select id="getorderlist" resultType="com.itwillbs.domain.OrderDTO">
    	select * from order
    	<if test="search != null">
    	where instruction_cd like CONCAT('%',#{search},'%')
    	</if>
    	order by order_cd
    	limit #{startRow},#{pageSize}	
    </select>
	
	<select id="getordercount" resultType="java.lang.Integer">
        select count(*) from order
        <if test="search != null">
    	where instruction_cd like CONCAT('%',#{search},'%')
    	</if>
    </select>
    
    
    
