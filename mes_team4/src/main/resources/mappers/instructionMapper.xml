	 <select id="getorderlist" resultType="com.itwillbs.domain.OMDTO">
    	select * from order_management
    	<if test="search != null">
    	where order_cd like CONCAT('%',#{search},'%')
    	</if>
    	limit #{startRow},#{pageSize}	
    </select>
	
	<select id="getordercount" resultType="java.lang.Integer">
        select count(*) from order_management
        <if test="search != null">
    	where order_cd like CONCAT('%',#{search},'%')
    	</if>
    </select>

    <select id="orderinfo" resultType="com.itwillbs.domain.OMDTO">
        select *
        from order_management
        where order_cd = #{order_cd}
    </select>
    
    <insert id="instructioninsertpro">
        insert into instruction(instruction_code, order_cd, product_cd, instruction_qt, line_cd, instruction_date, instruction_state) 
		values(#{instruction_code},#{order_cd},#{product_cd},#{instruction_qt},#{line_cd},#{instruction_date},#{instruction_state})
    </insert>
    
    <select id="instructioninfo" resultType="com.itwillbs.domain.InstructionDTO">
        select *
        from instruction
        where instruction_code = #{instruction_code}
    </select>
    
     <update id="instructionupdatepro">
     	update instruction set order_cd = #{order_cd}, product_cd = #{product_cd}, instruction_qt = #{instruction_qt}, line_cd = #{line_cd}, instruction_date = #{instruction_date}, instruction_state = #{instruction_state}
     	where instruction_code = #{instruction_code}
    </update>
    
    <delete id="instructiondelete">
  		delete from instruction
  		where instruction_code = #{instruction_code}
    </delete>
    
 	 <select id="instructionlist" resultType="com.itwillbs.domain.InstructionDTO">
    	select * from instruction
    	<if test="search != null">
    	where order_cd like CONCAT('%',#{search},'%')
    	</if>
    	limit #{startRow},#{pageSize}	
    </select>
	
	<select id="getinstructioncount" resultType="java.lang.Integer">
        select count(*) from instruction
        <if test="search != null">
    	where order_cd like CONCAT('%',#{search},'%')
    	</if>
    </select>
 

    
